{
  "name": "spriced-ui-lib",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/spriced-ui-lib/src",
  "prefix": "sp",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/spriced-ui-lib/ng-package.json",
        "tailwindConfig": "libs/spriced-ui-lib/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/spriced-ui-lib/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/spriced-ui-lib/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/spriced-ui-lib/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/spriced-ui-lib/**/*.ts",
          "libs/spriced-ui-lib/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/spriced-ui-lib/.storybook",
        "browserTarget": "spriced-ui-lib:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/spriced-ui-lib",
        "configDir": "libs/spriced-ui-lib/.storybook",
        "browserTarget": "spriced-ui-lib:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
