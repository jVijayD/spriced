package com.sim.spriced.defnition.repo.impl.integration;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertTrue;

import org.junit.jupiter.api.BeforeAll;
import org.junit.jupiter.api.Order;
import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.TestInstance;
import org.junit.jupiter.api.TestMethodOrder;
import org.junit.jupiter.api.MethodOrderer.OrderAnnotation;
import org.junit.jupiter.api.TestInstance.Lifecycle;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.context.annotation.Import;

import com.sim.spriced.defnition.MultitenantTestConfiguration;
import com.sim.spriced.defnition.repo.impl.EntityRepo;
import com.sim.spriced.defnition.repo.impl.GroupRepo;
import com.sim.spriced.framework.models.Entity;
import com.sim.spriced.framework.models.Group;

@SpringBootTest
@Import(MultitenantTestConfiguration.class)
@TestInstance(Lifecycle.PER_CLASS)
@TestMethodOrder(OrderAnnotation.class)
public class EntityRepoTest {

	@Autowired
	EntityRepo entityRepo;

	String entityName;

	@BeforeAll
	public void setup() {
		entityName = "Entity1";
	}

	@Test
	@Order(1)
	void createTest() {
		Entity entity = new Entity(entityName);
		entity.setGroup("FirstGroup1");
		this.entityRepo.create(entity);
		assertTrue(true);
	}
	

}
