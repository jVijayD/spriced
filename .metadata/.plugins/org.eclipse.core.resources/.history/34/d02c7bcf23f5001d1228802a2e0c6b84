package com.sim.spriced.framework.exceptions;

public class InvalidEntityFieldMapping extends BaseException {
	
	private static final String code="DB_EFM - 003";
	private static final String messageFormat= "Error in mapping table-[0] for column-[1].[2]";

	public InvalidEntityFieldMapping(String message) {
		super(message,code);
	}
	
	public InvalidEntityFieldMapping(String table,String column) {
		super(String.format(messageFormat, table,column),code);
	}
	

	public InvalidEntityFieldMapping(String table,String column,Throwable cause) {
		super(String.format(messageFormat, table,column,cause.getMessage()),cause,code);
	}
	
}
