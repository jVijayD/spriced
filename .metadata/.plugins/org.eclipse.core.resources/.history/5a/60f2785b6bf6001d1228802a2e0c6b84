package com.sim.spriced.defnition.repo.impl;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import org.jooq.Field;
import org.jooq.impl.DSL;
import org.springframework.stereotype.Repository;

import com.sim.spriced.defnition.repo.IEntityRepo;
import com.sim.spriced.framework.models.Entity;
import com.sim.spriced.framework.repo.BaseRepo;

@Repository
public class EntityRepo extends BaseRepo implements IEntityRepo {

	private static final String TABLE="entity";
	
	private static final String NAME="name";
	private static final String GROUP="group";
	private static final String VERSION="version";
	private static final String IS_DISABLED="is_disabled";
	private static final String ATTRIBUTES="attributes";
	
	@Override
	public Entity fetchByName(String name, String group) {
		// TODO Auto-generated method stub
		var subSelect = DSL.select(columnMax(VERSION)).from(TABLE);
		return context.selectFrom(TABLE).where(column(NAME).eq(name).and(column(GROUP).eq(group).and(column(VERSION).eq(subSelect)))).fetchOne().into(Entity.class);
	}

}
